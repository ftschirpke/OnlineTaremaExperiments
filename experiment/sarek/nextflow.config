params {
    
    // Parameters for full-size test
    input                   = '/input/workflow-inputs/sarek/inputSmall.csv'
    tools = 'strelka,ascat,cnvkit,tiddit,mpileup'
    step = 'mapping'
    genome =  'GATK.GRCh37'
    nucleotides_per_second = 20
    wes                    = true
    max_memory              = '60.GB'
    max_cpus                = 30
    outdir = "/input/data/out/"
    aligner = "bwa-mem"
    intervals = null

    genomes {
        'GATK.GRCh37' {
            ascat_alleles          = "/input/workflow-inputs/sarek/37/ref/G1000_alleles_hg19.zip"                                               
            ascat_loci             = "/input/workflow-inputs/sarek/37/ref/G1000_loci_hg19.zip"                                              
            ascat_loci_gc          = "/input/workflow-inputs/sarek/37/ref/GC_G1000_hg19.zip"                                                
            ascat_loci_rt          = "/input/workflow-inputs/sarek/37/ref/RT_G1000_hg19.zip"                                                
            bwa                    = "/input/workflow-inputs/sarek/37/ref/BWAIndex/"                          
            chr_dir                = "/input/workflow-inputs/sarek/37/ref/Chromosomes"                        
            dbsnp                  = "/input/workflow-inputs/sarek/37/ref/dbsnp_138.b37.vcf.gz"                                              
            dbsnp_tbi              = "/input/workflow-inputs/sarek/37/ref/dbsnp_138.b37.vcf.gz.tbi"                                                
            germline_resource      = "/input/workflow-inputs/sarek/37/ref/af-only-gnomad.raw.sites.vcf.gz"                                         
            germline_resource_tbi  = "/input/workflow-inputs/sarek/37/ref/af-only-gnomad.raw.sites.vcf.gz.tbi"                                     
            known_indels           = "/input/workflow-inputs/sarek/37/ref/{1000G_phase1,Mills_and_1000G_gold_standard}.indels.b37.vcf.gz"                                          
            known_indels_tbi       = "/input/workflow-inputs/sarek/37/ref/{1000G_phase1,Mills_and_1000G_gold_standard}.indels.b37.vcf.gz.tbi"                     
            known_snps             = "/input/workflow-inputs/sarek/37/ref/1000G_phase1.snps.high_confidence.b37.vcf.gz"                            
            known_snps_tbi         = "/input/workflow-inputs/sarek/37/ref/1000G_phase1.snps.high_confidence.b37.vcf.gz.tbi"                        
            mappability            = "/input/workflow-inputs/sarek/37/ref/out100m2_hg19.gem"      
            fasta                  = "/input/workflow-inputs/sarek/37/ref/human_g1k_v37_decoy.fasta"                                                                             
            fasta_fai              = "/input/workflow-inputs/sarek/37/ref/human_g1k_v37_decoy.fasta.fai"                                                                        
            dict                   = "/input/workflow-inputs/sarek/37/ref/human_g1k_v37_decoy.dict"                                        
        }
    }
}


executor {
    queueSize = 5000
}

