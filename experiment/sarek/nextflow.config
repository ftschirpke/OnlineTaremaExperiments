    withName:BWAMEM1_MEM {
      ext {
         when = { params.aligner == "bwa-mem" }
      }
    }
    withName: 'NFCORE_SAREK:SAREK:BAM_APPLYBQSR:CRAM_MERGE_INDEX_SAMTOOLS:INDEX_CRAM' {
        cpus = 2
        memory = '1024.MB'
